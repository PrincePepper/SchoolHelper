<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/decision_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_decision"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:textSize="26sp"/>

    <TextView
        android:id="@+id/decision_textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/decision_textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/decision_textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"/>
    <TextView
        android:id="@+id/decision_textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"/>
    <TextView
        android:id="@+id/decision_textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"/>
    <TextView
        android:id="@+id/decision_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorRed"
        android:textSize="20sp"
        android:layout_marginStart="5dp"/>
</LinearLayout>